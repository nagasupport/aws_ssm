      "default": ""
    },
    "filename": {
      "type": "String",
      "description": "destination file name",
      "default": "t.txt"
    }
  },
  "mainSteps": [
    {
      "action": "aws:runShellScript",
      "name": "runShellScript",
      "inputs": {
        "timeoutSeconds": "60",
        "runCommand": [
          "runuser -l ec2-user -c 'wget -O /tmp/{{filename}} \"{{url}}\"'",
          "runuser -l ec2-user -c 'cp /tmp/{{filename}} /home/ec2-user/dir1'",
          "runuser -l ec2-user -c 'cp /tmp/{{filename}} /home/ec2-user/dir2'",
          "runuser -l ec2-user -c 'cp /tmp/{{filename}} /home/ec2-user/dir3'",
          "runuser -l ec2-user -c 'ls -l'"
